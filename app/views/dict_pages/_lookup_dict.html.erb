<!DOCTYPE html>
<html>
<% options = [] 
   @dictionaries.dict_infos().each {|inf|
     options << [ inf.dict_name , inf.dict_sys_name ]
   } 
%>


<%= form_with url: '/dict_lookup', method: :get, local: true do |f| %>
  <%= f.select(
	"selected_dict", options, selected: params[:selected_dict] ) %> 
  <%= f.label :q, "Tra tu dien :" %>
  <%= f.text_field :to_search, id: :to_search , value:  params[:to_search] %>
  <%= f.submit "Search" %>
  <%= hidden_field_tag('lookup_type','lookup_dict') %>
<% end %>


</html>


