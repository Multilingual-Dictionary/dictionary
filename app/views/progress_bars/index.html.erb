<p id="notice"><%= notice %></p>

<h1>Progress Bars</h1>

<table>
  <thead>
    <tr>
      <th>Message</th>
      <th>Percent</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @progress_bars.each do |progress_bar| %>
      <tr>
        <td><%= progress_bar.message %></td>
        <td><%= progress_bar.percent %></td>
        <td><%= progress_bar.user_id %></td>
        <td><%= link_to 'Show', progress_bar %></td>
        <td><%= link_to 'Edit', edit_progress_bar_path(progress_bar) %></td>
        <td><%= link_to 'Destroy', progress_bar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Progress Bar', new_progress_bar_path %>
